v0x64550769e710_0 .var "clk", 0 0;
v0x64550769e7d0_0 .var "noisy_in", 0 0;
v0x64550769e8a0_0 .net "pulse_out", 0 0, v0x64550769e4c0_0;  1 drivers
v0x64550769e9a0_0 .var "rst_n", 0 0;
E_0x64550767ac10 .event posedge, v0x645507641cf0_0;
S_0x64550767d880 .scope module, "dut" "PulseTracer" 2 16, 3 3 0, S_0x64550767d620;
 .timescale -9 -12;
    .port_info 0 /INPUT 1 "clk";
    .port_info 1 /INPUT 1 "rst_n";
    .port_info 2 /INPUT 1 "noisy_in";
    .port_info 3 /OUTPUT 1 "pulse_out";
P_0x64550767db80 .param/l "FILTER_LEN" 0 3 4, +C4<00000000000000000000000000000011>;
v0x645507641cf0_0 .net "clk", 0 0, v0x64550769e710_0;  1 drivers
v0x64550769e340_0 .var "counter", 3 0;
v0x64550769e420_0 .net "noisy_in", 0 0, v0x64550769e7d0_0;  1 drivers
v0x64550769e4c0_0 .var "pulse_out", 0 0;
v0x64550769e580_0 .net "rst_n", 0 0, v0x64550769e9a0_0;  1 drivers
E_0x645507642620/0 .event negedge, v0x64550769e580_0;
E_0x645507642620/1 .event posedge, v0x645507641cf0_0;
E_0x645507642620 .event/or E_0x645507642620/0, E_0x645507642620/1;
    .scope S_0x64550767d880;
T_0 ;
    %wait E_0x645507642620;
    %load/vec4 v0x64550769e580_0;
    %nor/r;
    %flag_set/vec4 8;
    %jmp/0xz  T_0.0, 8;
    %pushi/vec4 0, 0, 4;
    %assign/vec4 v0x64550769e340_0, 0;
    %pushi/vec4 0, 0, 1;
    %assign/vec4 v0x64550769e4c0_0, 0;
    %jmp T_0.1;
T_0.0 ;
    %load/vec4 v0x64550769e420_0;
    %flag_set/vec4 8;
    %jmp/0xz  T_0.2, 8;
    %load/vec4 v0x64550769e340_0;
    %pad/u 32;
    %cmpi/u 3, 0, 32;
    %jmp/0xz  T_0.4, 5;
    %load/vec4 v0x64550769e340_0;
    %addi 1, 0, 4;
    %assign/vec4 v0x64550769e340_0, 0;
T_0.4 ;
    %load/vec4 v0x64550769e340_0;
    %pad/u 32;
    %cmpi/e 2, 0, 32;
    %jmp/0xz  T_0.6, 4;
    %pushi/vec4 1, 0, 1;
    %assign/vec4 v0x64550769e4c0_0, 0;
    %jmp T_0.7;
T_0.6 ;
    %pushi/vec4 0, 0, 1;
    %assign/vec4 v0x64550769e4c0_0, 0;
T_0.7 ;
    %jmp T_0.3;
T_0.2 ;
    %pushi/vec4 0, 0, 4;
    %assign/vec4 v0x64550769e340_0, 0;
    %pushi/vec4 0, 0, 1;
    %assign/vec4 v0x64550769e4c0_0, 0;
T_0.3 ;
T_0.1 ;
    %jmp T_0;
    .thread T_0;
    .scope S_0x64550767d620;
T_1 ;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e710_0, 0, 1;
    %end;
    .thread T_1;
    .scope S_0x64550767d620;
T_2 ;
    %delay 5000, 0;
    %load/vec4 v0x64550769e710_0;
    %inv;
    %store/vec4 v0x64550769e710_0, 0, 1;
    %jmp T_2;
    .thread T_2;
    .scope S_0x64550767d620;
T_3 ;
    %wait E_0x64550767ac10;
    %vpi_call 2 29 "$display", "Time %0t | noisy_in=%b | pulse_out=%b", $time, v0x64550769e7d0_0, v0x64550769e8a0_0 {0 0 0};
    %jmp T_3;
    .thread T_3;
    .scope S_0x64550767d620;
T_4 ;
    %vpi_call 2 33 "$dumpfile", "pulse_tracer_full.vcd" {0 0 0};
    %vpi_call 2 34 "$dumpvars", 32'sb00000000000000000000000000000000, S_0x64550767d620 {0 0 0};
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e9a0_0, 0, 1;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 20000, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e9a0_0, 0, 1;
    %vpi_call 2 45 "$display", "\012[TC1] Short Glitch (Should NOT trigger pulse)" {0 0 0};
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 10000, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 50000, 0;
    %vpi_call 2 52 "$display", "\012[TC2] Stable high for FILTER_LEN (Should trigger 1 pulse)" {0 0 0};
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 10000, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %vpi_call 2 60 "$display", "\012[TC3] Alternating glitches (Should NOT trigger pulse)" {0 0 0};
    %pushi/vec4 10, 0, 32;
T_4.0 %dup/vec4;
    %pushi/vec4 0, 0, 32;
    %cmp/s;
    %jmp/1xz T_4.1, 5;
    %jmp/1 T_4.1, 4;
    %pushi/vec4 1, 0, 32;
    %sub;
    %vpi_func 2 62 "$random" 32 {0 0 0};
    %pushi/vec4 2, 0, 32;
    %mod/s;
    %pad/s 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 10000, 0;
    %jmp T_4.0;
T_4.1 ;
    %pop/vec4 1;
    %vpi_call 2 69 "$display", "\012[TC4] Two valid pulses with low separation" {0 0 0};
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 10000, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 10000, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %vpi_call 2 80 "$display", "\012[TC5] Long held high (Only one pulse)" {0 0 0};
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 100000, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %vpi_call 2 88 "$display", "\012[TC6] Glitch during FILTER_LEN build-up" {0 0 0};
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 10000, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 10000, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 10000, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x64550769e7d0_0, 0, 1;
    %delay 30000, 0;
    %vpi_call 2 98 "$display", "\012[TC7] Random noise, then forced valid pulse" {0 0 0};
    %pushi/vec4 20, 0, 32;
T_4.2 %dup/vec4;
    %pushi/vec4 0, 0, 32;
    %cmp/s;
    %jmp/1xz T_4.3, 5;
    %jmp/1 T_4.3, 4;
    %pushi/vec4 1, 0, 32;
