S_0x64550767d620 .scope module, "tb_PulseTracer" "tb_PulseTracer" 2 3;
 .timescale -9 -12;
P_0x64550766f8c0 .param/l "CLK_PERIOD" 0 2 7, +C4<00000000000000000000000000001010>;
